<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagenFruta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/tv_NombreFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="Nombre Fruta"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_OrigenFruta"
        app:layout_constraintStart_toEndOf="@+id/imagenFruta"
        app:layout_constraintTop_toTopOf="@+id/imagenFruta" />

    <TextView
        android:id="@+id/tv_OrigenFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="Denominacion"
        app:layout_constraintBottom_toBottomOf="@+id/imagenFruta"
        app:layout_constraintStart_toEndOf="@+id/imagenFruta"
        app:layout_constraintTop_toTopOf="@+id/imagenFruta" />
</androidx.constraintlayout.widget.ConstraintLayout>